.header
  position relative
  top 0
  left 0
  width 100%
  z-index 100
  max-height 80px
  height 80px
  margin-bottom 40px
  border-bottom 2px solid transparent
  will-change backdrop-filter
  backdrop-filter blur(0.5px) // Minimal initial blur
  background-color rgba(255, 255, 255, 0)
  transition border-bottom 0.2s ease-in-out,
             backdrop-filter 0.2s ease-in-out,
             background-color 0.2s ease-in-out

  &::before
    content ' '
    background no-repeat url($background-img) $background-color
    background-size cover
    height 80px
    width 100vw
    z-index -1
    position absolute
    top 0
    opacity 0
    transition opacity 0.2s ease-in-out

  .header-content
    margin 0 $margin-wide
    display flex
    align-items center
    justify-content space-between
    gap 1rem
    height 100%;

  .header-logo
    position relative
    height $header-logo-size
    width $header-logo-size
    z-index 10
    transition height 1s ease-in-out,
               width 1s ease-in-out,
               z-index 1s ease-in-out

    a
      display inline-block
      height $header-logo-size
      width $header-logo-size

    img
      height $header-logo-size
      width $header-logo-size
      margin 0 auto
      padding 3px
      border solid 5px $emphasis-color
      border-radius 100%

  .header-title
    position relative  
    font-family $title-font-family
    font-size 45pt
    transition font-size 1s ease-in-out

  .header-nav
    margin-left auto
    ul
      display flex
      align-items center
      justify-content center
      list-style none
      margin 0
      padding 0
      li
        padding 0
        color $font-color
        font-family $header-font-family

        a
          margin 0 0 0 0.5rem 
          text-decoration none
          transition all 0.2s ease-in-out

          &:hover
            color $emphasis-color
            text-decoration none
            transform scale(1.1)
  
  .header-nav-separator
    margin 0 0 0 0.5rem

html:not([data-scroll='0'])
  .header
    position sticky
    backdrop-filter blur(60px)
    background-color: rgba(255, 255, 255, 0.5)
    border-bottom 2px solid $emphasis-color

  .header::before
    background no-repeat url($background-img) $background-color
    background-size cover
    content ' '
    opacity 0.3
    position absolute
    top 0

  .header-content
    padding 0

  .header-logo
    height 55px
    width 55px
    z-index 10

    a
      height 55px
      width 55px

    img
      height 55px
      width 55px
      margin 0 auto
      padding 2px
      border-radius 20%

  .header-title
    font-size 30pt
